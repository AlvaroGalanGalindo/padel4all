{% extends '@App/base.html.twig' %}

{% block content %}
    <div class="content user-edit">
        <div class="container">
            <div class="page-header">
                <h2>Editar perfil</h2>
            </div>

            {{ form_start(form, {'attr': {'class': 'bs-example form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="row">
                {% include '@App/helper/form-group.html.twig' with {'campo': form.username, 'icono': 'account'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': form.current_password, 'icono': 'lock'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': form.nombre, 'icono': 'format-color-text'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': form.apellidos, 'icono': 'format-color-text'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': form.email, 'icono': 'email'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': form.telefono, 'icono': 'smartphone-android'} %}
                {{ form_rest(form) }}
            </div>

            <div class="row">
                <div class="row botonera">
                    <div class="col-xs-12">
                        <input type="submit" value="Modificar" class="btn btn-info" />
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
