{% extends 'MopaBootstrapBundle::layout.html.twig' %}

{% block title %}padel4all{% endblock title %}

{% block head_style %}

    {#{% stylesheets
    '@AppBundle/Resources/public/less/custom.less'
    filter='cssrewrite' output='css/style.min.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}#}
    <link href="{{ asset('css/style.min.css') }}" type="text/css" rel="stylesheet" media="screen" />

    {#{% javascripts
    'bundles/app/js/jquery-3.1.1.min.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}#}
    <script type="text/javascript" src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>


{% endblock head_style %}


{% block body_start %}
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10 cabecera center-block">
            <div class="logo"><a href="{{ path("homepage") }}"><img class="img-responsive" src="{{ asset("images/logo.png") }}"></a></div>
            <div class="user-widget">
                {% if app.user is not empty %}
                    Registrado como <b>{{ app.user.username }}</b> - <a href="{{ path("fos_user_security_logout") }}">Desconectar</a>
                {% else %}
                    <a href="{{ path("fos_user_security_login") }}">Login</a> - <a href="{{ path("fos_user_registration_register") }}">Registro</a><br/>
                {% endif %}
            </div>
        </div>
        <div class="col-xs-1"></div>
    </div>
{% endblock body_start %}


{% block body %}
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10 contenido">
            {% block content %}
            {% endblock content %}
        </div>
        <div class="col-xs-1"></div>
    </div>
{% endblock body %}



