{% extends '@App/base.html.twig' %}

{% block body %}
    <i class="fa fa-user" aria-hidden="true"></i>

    <div class="container">
        <div class="content">
            <div class="page-header"><h1>Edici√≥n de pista</h1></div>
            {{ form_start(edit_form, {'attr': {'class': 'bs-example form-horizontal'}}) }}
                {{ form_errors(edit_form) }}

                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.nombre, 'icono': 'pencil'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.propietario, 'icono': 'user'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.direccion, 'icono': 'map-marker'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.localidad, 'icono': 'map-marker'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.provincia, 'icono': 'map-marker'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.telefono, 'icono': 'iphone'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.horario, 'icono': 'clock'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.precio, 'icono': 'euro'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.tipo, 'icono': 'lock'} %}
                {% include '@App/helper/form-group.html.twig' with {'campo': edit_form.user, 'icono': 'lock'} %}

                {{ form_widget(edit_form) }}

                <div class="pull-right">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a href="{{ path('pista_index') }}" class="btn btn-info">Volver al listado</a>
                </div>
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
