{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="content">
            <div class="page-header"><h1>Edici√≥n de pista</h1></div>
            <form class="bs-example form-horizontal">
                {{ form_errors(edit_form) }}
                {% for item in edit_form %}
                    {% if item.vars.id != "pista__token" %}
                        <div class="form-group">
                                {{ form_label(item, null, {'label_attr': {'class': 'control-label col-sm-1'}}) }}
                                <div class="col-sm-11">
                                    <div class="input-group">
                                        {{ form_widget(item, {'attr': {'class': 'form-control'}}) }}
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-euro"></span></span>
                                    </div>
                                </div>
                        </div>
                    {% endif %}
                {% endfor %}

                {{ form_widget(edit_form) }}

                <div class="pull-right">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a href="{{ path('pista_index') }}" class="btn btn-info">Volver al listado</a>
                </div>
            </form>

            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
