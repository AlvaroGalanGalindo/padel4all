{% extends '@App/base.html.twig' %}

{% block body %}
<div class="container">
    <div class="content">
        <div class="page-header">
            <h2>Pistas</h2>
            <div class="list-new"><a href="{{ path('pista_new') }}" class="btn btn-success">Crear nueva pista</a></div>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Propietario</th>
                <th>Localidad</th>
                <th>Telefono</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for pistum in pistas %}
                <tr>
                    <td>{{ pistum.nombre }}</td>
                    <td>{{ pistum.propietario }}</td>
                    <td>{{ pistum.localidad }}</td>
                    <td>{{ pistum.telefono }}</td>
                    <td>
                        <a href="{{ path('pista_show', { 'id': pistum.id }) }}" class="btn btn-info">Ver</a>
                        <a href="{{ path('pista_edit', { 'id': pistum.id }) }}" class="btn btn-info">Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
